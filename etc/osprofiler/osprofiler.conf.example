#General app configurables

push_interval: 1

agents:
  - plugin: mysql
    name: "mysqlagent1"
    metrics:
      - num_connections
    auth:
      username: "root"
      password: "admin"
    push_interval: 2

  - plugin: rabbit
    name: "rabbitagent1"
    metrics:
      - num_requests
      - num_connections
    auth:
      username: "root"
      password: "password"
    push_interval: 2

  - plugin: system
    name: "systemagent1"
    metrics:
      - network
      - cpu
      - memory
    push_interval: 2

  - plugin: process
    name: "nova_api__agent"
    process_name: "nova_api"
    metrics:
      - memory
      - cpu
      - network
    push_interval: 2

  - plugin: process
    name: "nova_scheduler__agent"
    process_name: "nova_scheduler"
    metrics:
      - cpu
    push_interval: 2

# The backend that will recieve metrics generated by the agents
backend:

  - plugin: blueflood
    name: "bluefood_agent"
    auth:
      user: "root"
      password: "password"
      auth_url: "10.245.1.4"
    


