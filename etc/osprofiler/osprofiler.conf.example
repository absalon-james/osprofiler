#General app configurables

agents:
  - plugin: osprofiler.plugins.mysql.Mysql
    name: "mysql"
    prefix: somecloud
    metrics:
      - num_connections
    auth:
      username: "root"
      password: "admin"
    sample_interval: 2

  - plugin: osprofiler.plugins.rabbit.Rabbit
    name: "rabbit"
    prefix: somecloud
    metrics:
      - num_requests
      - num_connections
    auth:
      username: "root"
      password: "password"
    sample_interval: 2

  - plugin: osprofiler.plugins.system.System
    name: "system"
    prefix: somecloud
    metrics:
      - network
      - cpu
      - memory
    sample_interval: 2

  - plugin: osprofiler.plugins.process.Process

    # Name of the process agent
    name: "process"

    # Optional prefix. Defaults to ''
    # Metric names will be reported as '{prefix}.{hostname}.{restofmetric}
    prefix: somecloud

    # Optionally include a list of process filters.
    # All processes will be returned without filters
    #filters:
    #  - nova
    #  - neutron
    #  - cinder

    # Optionally include list of metrics.
    # All metrics will be returned by default.
    # metrics:
    #  - memory
    #  - cpu
    #  - network
    sample_interval: 2

# The backend that will recieve metrics generated by the agents
backend:

  - plugin: blueflood
    name: "bluefood_agent"
    auth:
      user: "root"
      password: "password"
      auth_url: "10.245.1.4"
