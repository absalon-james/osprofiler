#General app configurables

agents:
  - plugin: cipmysql
    name: "mysqlagent1"
    metrics:
      - num_connections
    auth:
      username: "root"
      password: "password"

  - plugin: ciprabbit
    name: "rabbitagent1"
    metrics:
      - num_requests
      - num_connections
    auth:
      username: "root"
      password: "password"

  - plugin: cipsystem
    name: "systemagent1"
    metrics:
      - network
      - cpu
      - memory


  - plugin: cipprocess
    name: "nova_api_cip_agent"
    process_name: "nova_api"
    metrics:
      - memory
      - cpu
      - network

  - plugin: cipprocess
    name: "nova_scheduler_cip_agent"
    process_name: "nova_scheduler"
    metrics:
      - cpu

# The backend that will recieve metrics generated by the agents
backend:

  - plugin: cipblueflood
    name: "bluefood_agent"
    auth:
      user: "root"
      password: "password"
      auth_url: "10.245.1.4"
    

